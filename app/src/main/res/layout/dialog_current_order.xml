<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/round_corner_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20">

        <LinearLayout
            android:layout_marginBottom="@dimen/dp_15"
            android:visibility="gone"
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.clique.utils.CustomTextView
                android:id="@+id/tv_hostal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:text="Samras Hostal"
                android:textColor="#878688"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />


            <com.clique.utils.CustomTextView
                android:id="@+id/tv_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:text="9723186737"
                android:textColor="#878688"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_brand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@android:color/transparent"
            app:actualImageScaleType="centerInside"
            app:failureImage="@drawable/ic_placeholde"
            app:failureImageScaleType="centerInside"
            app:placeholderImage="@drawable/ic_placeholde"
            app:placeholderImageScaleType="fitCenter"
            app:retryImage="@drawable/ic_placeholde"
            app:retryImageScaleType="centerCrop"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_brand_dialog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpi_120"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:alpha="1"
            android:clipToPadding="false"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">

            <com.clique.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reg"
                android:textColor="#878688"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />


            <com.clique.utils.CustomTextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@drawable/ic_rupee_indian"
                android:text="310"
                android:textColor="#878688"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_two_women_on_line_2" />


            <com.clique.utils.CustomTextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@drawable/ic_rupee_green"
                android:text="10"
                android:textColor="#4a4"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <com.clique.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You Pay"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold" />


            <com.clique.utils.CustomTextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@drawable/ic_rupee_black"
                android:text="300"
                android:textColor="#000"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/v_view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:background="#699e9e9e"
            android:visibility="gone" />

        <com.clique.utils.CustomTextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/grayrounded"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_30" />
        <com.clique.utils.CustomTextView
            android:id="@+id/tv_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/round_corner_blue"
            android:gravity="center"
            android:text="Checkout"
            android:visibility="gone"
            android:textColor="@color/colorblue"
            android:textSize="@dimen/sp_16"
            app:fonttype="@string/semibold" />
    </LinearLayout>
    <!--
        <View
            android:id="@+id/v_view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#699e9e9e"
            />-->
</LinearLayout>