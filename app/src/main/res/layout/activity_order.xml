<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.clique.activity.OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_settings" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user_placeholder"
            app:actualImageScaleType="centerInside"
            app:failureImage="@drawable/ic_user_placeholder"
            app:failureImageScaleType="centerInside"
            app:placeholderImage="@drawable/ic_user_placeholder"
            app:placeholderImageScaleType="centerInside"
            app:retryImage="@drawable/ic_user_placeholder"
            app:retryImageScaleType="centerInside"
            app:roundAsCircle="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_userimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_two_women_on_line" />
    </LinearLayout>
    <com.clique.utils.CustomTextView
        android:id="@+id/tv_modifiy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#878688"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        android:text="Modify"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_30"
        app:fonttype="@string/semibold"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_brand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpi_120"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:alpha="1"
        android:clipToPadding="false"
        android:visibility="visible" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.clique.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reg"
            android:textColor="#878688"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />


        <com.clique.utils.CustomTextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawableLeft="@drawable/ic_rupee_indian"
            android:text="310"
            android:textColor="#878688"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_two_women_on_line_2" />


        <com.clique.utils.CustomTextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawableLeft="@drawable/ic_rupee_green"
            android:text="10"
            android:textColor="#4a4"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">

        <com.clique.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Pay"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold" />


        <com.clique.utils.CustomTextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawableLeft="@drawable/ic_rupee_black"
            android:text="300"
            android:textColor="#000"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <View
        android:id="@+id/v_view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="center"
        android:background="#699e9e9e" />

    <com.clique.utils.HorizontalPicker
        android:id="@+id/rl_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_margin="@dimen/dp_5"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="2"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/text_gray"
        android:textSize="20sp"
        android:visibility="visible"
        app:dividerSize="10dp"
        app:sideItems="1"
        app:values="@array/num" />

    <View
        android:id="@+id/v_view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="center"
        android:background="#699e9e9e" />
