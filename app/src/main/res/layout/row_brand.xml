<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <com.clique.utils.CustomTextView
        android:id="@+id/tv_modifiy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#878688"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        android:text="Modify"
        android:layout_gravity="right"
        app:fonttype="@string/semibold"
        android:visibility="gone"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_brand"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        app:actualImageScaleType="centerInside"
        app:failureImage="@drawable/ic_placeholde"
        app:failureImageScaleType="centerInside"
        app:placeholderImage="@drawable/ic_placeholde"
        app:placeholderImageScaleType="centerInside"
        app:retryImage="@drawable/ic_placeholde"
        app:retryImageScaleType="centerCrop" />

    <com.clique.utils.CustomTextView
        android:id="@+id/tv_subbrandname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_20"
        android:visibility="gone"
        app:fonttype="@string/semibold" />

    <LinearLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_wings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_wings" />

        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent" />

        <com.clique.utils.CustomTextView
            android:id="@+id/tv_noofpad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="10"
            android:gravity="center"
            android:textSize="@dimen/sp_14" />
        <ImageView
            android:id="@+id/iv_pad"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_pad" />
    </LinearLayout>
</LinearLayout>