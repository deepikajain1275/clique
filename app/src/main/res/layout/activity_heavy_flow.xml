<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_heavy_flow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.clique.activity.HeavyFlowActivity">


    <com.clique.utils.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_flow"
        android:gravity="center"
        android:text="I also use"
        android:textSize="@dimen/sp_30"
        android:layout_marginBottom="@dimen/dp_5"
        app:fonttype="@string/semibold" />

    <com.clique.utils.CustomTextView
        android:id="@+id/tv_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Heavy Flow Pad"
        android:textSize="@dimen/sp_30"
        app:fonttype="@string/semibold" />

    <com.clique.utils.CustomTextView
        android:id="@+id/tv_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_no"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/round_corner_bg"
        android:gravity="center"
        android:text="Yes"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_20"
        app:fonttype="@string/semibold" />

    <com.clique.utils.CustomTextView
        android:id="@+id/tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/round_corner_bg"
        android:gravity="center"
        android:text="No"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_20"
        app:fonttype="@string/semibold" />
</RelativeLayout>
