<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <com.clique.utils.CustomTextView
        android:id="@+id/tv_modifiy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="Modify"
        android:textColor="#878688"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        app:fonttype="@string/semibold" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:visibility="visible"
        />-->

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpi_120"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:alpha="1"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:visibility="visible" />

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:visibility="visible"

        />-->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_brand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_gravity="center"
        android:minHeight="@dimen/dp_150"
        android:paddingTop="@dimen/dp_15"
        android:visibility="gone"
        app:actualImageScaleType="centerInside"
        app:failureImage="@drawable/ic_placeholde"
        app:failureImageScaleType="centerInside"
        app:placeholderImage="@drawable/ic_placeholde"
        app:placeholderImageScaleType="centerInside"
        app:retryImage="@drawable/ic_placeholde"
        app:retryImageScaleType="centerInside" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wings" />


        <com.clique.utils.CustomTextView
            android:id="@+id/tv_pad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@drawable/ic_pad"
            android:text="10"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_two_women_on_line_2" />


        <com.clique.utils.CustomTextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawableLeft="@drawable/ic_rupee_green"
            android:text="10"
            android:textColor="#4a4"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />
    </LinearLayout>


    <com.clique.utils.CustomTextView
        android:id="@+id/tv_orderplaced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="Order Placed !"
        android:visibility="visible"
        android:textColor="@color/green"
        android:textSize="@dimen/sp_20"
        app:fonttype="@string/semibold" />
</LinearLayout>