<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enter_pincode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.clique.activity.EnterPincodeActivity">




        <com.clique.utils.CEditText
            android:id="@+id/et_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_20"
            android:inputType="phone"
            android:maxEms="10"
            app:fonttype="@string/semibold" />

    <com.clique.utils.CustomTextView
        android:id="@+id/tv_Lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/round_corner_bg_digit"
        android:gravity="center"
        android:text="Launch"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_20"
        app:fonttype="@string/semibold" />

    <com.clique.utils.CustomTextView
        android:id="@+id/tv_resendcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:text="Resend code"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_14"
        android:padding="@dimen/dp_10"
        app:fonttype="@string/semibold" />
</RelativeLayout>

