<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.clique.activity.TutorialActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_tut"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <com.clique.utils.CirclePageIndicator
        android:id="@+id/cp_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fillColor="@color/gray"
        />

    <com.clique.utils.CustomTextView
        android:id="@+id/tv_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/round_corner_bg"
        android:gravity="center"
        android:text="@string/create"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_20"
        app:fonttype="@string/semibold" />

</LinearLayout>
